<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="home_label_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4e4e4e</item>
    </style>

    <style name="home_cont_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="appsetup_cat_title">
        <item name="android:textSize">20sp</item>
        <item name="android:lines">2</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="appsetup_app_title">
        <item name="android:lines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="no_apps_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="learn_title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="learn_summary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="learn_cat_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="learn_cat_summary">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="home_setupapps_title1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="home_setupapps_title2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="home_setupapps_desc">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="intermediate_text_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>
